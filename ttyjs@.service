[Unit]
Description=ttyjs
After=rpcbind.service
After=docker.service
Requires=docker.service
Requires=rpcbind.service

[Service]
TimeoutStartSec=0
Restart=always
KillMode=none
ExecStartPre=-/usr/bin/docker stop ttyjs
ExecStartPre=-/usr/bin/docker rm ttyjs
ExecStart=/usr/bin/docker run -P=true --name=ttyjs%i nicholasvmoore/docker-ttyjs
ExecStop=/usr/bin/docker stop ttyjs

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=ttyjs@*.service
